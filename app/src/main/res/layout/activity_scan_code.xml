<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanCodeActivity">

    <fragment
        android:id="@+id/barcode_scanner"
        android:name="co.heri.finace.utils.barcode.BarcodeReader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:auto_focus="true"
        app:use_flash="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_barcode_reader" />

    <co.heri.finace.utils.barcode.ScannerOverlay
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        app:line_color="@color/accent_dark"
        app:line_speed="6"
        app:line_width="4"
        app:square_height="200"
        app:square_width="200"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="0dp">

    </co.heri.finace.utils.barcode.ScannerOverlay>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_margin="10sp"
            android:background="@drawable/circular_edge"
            android:backgroundTint="@color/black_overlay"
            app:srcCompat="@drawable/ic_flash"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="503dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_margin="10sp"
            android:background="@drawable/circular_edge"
            android:backgroundTint="@color/black_overlay"
            app:srcCompat="@drawable/ic_autofocus"
            tools:layout_editor_absoluteX="363dp"
            tools:layout_editor_absoluteY="503dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:layout_weight="3"
        android:background="@color/black_transparent"
        app:cardBackgroundColor="@color/black_transparent"
        app:cardCornerRadius="8sp"
        app:cardElevation="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/scan_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="The result of the QR"
                android:textColor="@color/white_text"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>